<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>
  
  <style name="BigHeaderTextBase">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">@dimen/detail_head_vertical_size</item>
    <item name="android:layout_marginTop">@dimen/detail_head_margin_vertical</item>
    <item name="android:textSize">@dimen/detail_head_text_size</item>
    <item name="android:gravity">center_vertical</item>
  </style>
  
  <style name="BigHeaderText" parent="BigHeaderTextBase">
    <item name="android:layout_marginRight">@dimen/detail_head_margin_horizontal</item>
    <item name="android:layout_marginLeft">@dimen/detail_head_margin_horizontal</item>
  </style>

</resources>
